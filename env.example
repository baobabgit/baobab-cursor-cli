# Configuration Baobab Cursor CLI
# Copiez ce fichier vers .env et configurez vos valeurs

# Token Cursor CLI (obligatoire)
CURSOR_TOKEN=your-cursor-token-here

# Configuration Docker
DOCKER_IMAGE=cursor-cli:latest
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1.0

# Configuration de logging
BAOBAB_LOG_LEVEL=INFO
BAOBAB_LOG_FORMAT=json
BAOBAB_LOG_FILE=logs/baobab.log

# Configuration de retry
BAOBAB_MAX_RETRIES=3
BAOBAB_TIMEOUT=300
BAOBAB_RETRY_DELAY=5

# Configuration de la base de données
DATABASE_URL=sqlite:///baobab.db
DATABASE_ECHO=false

# Configuration des sessions
SESSION_TIMEOUT=3600
SESSION_CLEANUP_INTERVAL=300

# Configuration des projets
DEFAULT_PROJECT_CONFIG=.cursor-config.json
PROJECT_TEMPLATES_DIR=.resources/templates

# Configuration de développement
DEBUG=false
VERBOSE=false
DRY_RUN=false

# Configuration des tests
TEST_DATABASE_URL=sqlite:///:memory:
TEST_TIMEOUT=30
TEST_PARALLEL=false

# Configuration de la couverture
COVERAGE_THRESHOLD=80
COVERAGE_REPORT_FORMATS=html,xml,json

# Configuration des linters
BLACK_LINE_LENGTH=88
FLAKE8_MAX_LINE_LENGTH=88
MYPY_STRICT=true
